{
  "compilerOptions": {
    "target": "ES2019", // Nodejs 14+
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Include your source files
  "exclude": ["node_modules", "dist"] // Exclude output and dependency files
}
